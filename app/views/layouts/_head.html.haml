:ruby
  keywords = content_for(:keywords) or 'eopas, audio annotations'
  description = content_for(:description) or 'EOPAS - Audio annotations'
  title = 'EOPAS - Audio Annotations'
  title = "#{content_for(:title)} - #{title}" if content_for(:title)

%head

  %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}

  %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}

  %meta{:name => 'robot', :content => 'index, follow'}
  %meta{:name => 'keywords', :content => keywords}
  %meta{:name => 'description', :content => description}
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0"}

  %title= title

  = render :partial => 'layouts/javascripts'
  = render :partial => 'layouts/stylesheets'

