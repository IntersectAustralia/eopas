.row
  .col-sm-12

    %h2 Attach Media Item

    %h3 Transcript

    #metadata_display.collapse_box
      = render :partial => 'details'

    %h3 Media

    = form_tag create_media_item_transcript_path @transcript do
      = hidden_field_tag :transcript_id, @transcript.id
      = hidden_field_tag :media_item_id

      #masonry-container.row
        .col-sm-12

          - @media_items.each do |media_item|
            
            .box
              = link_to media_item do
                = media_item_thumb_image_tag media_item
              %p
                = link_to media_item.title, media_item
              %p
                
                = link_to 'Attach', '#', 'data-add-media-item' => true, 'data-media-item-id' => media_item.id, class: 'btn btn-default btn-xs'
