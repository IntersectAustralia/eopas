
.form-group.required
  = form.label :first_name, class: 'col-sm-4'
  .col-sm-8
    = form.text_field :first_name, required: 'true'

  = form.label :last_name, class: 'col-sm-4'
  .col-sm-8
    = form.text_field :last_name, required: 'true'

.form-group.required
  = form.label :email, class: 'col-sm-4'
  .col-sm-8
    = form.text_field :email, required: 'true'

.form-group
  = form.label :password, form.object.new_record? ? nil : "Change password", class: 'col-sm-4'
  .col-sm-6
    = form.password_field :password

  = form.label :password_confirmation, class: 'col-sm-4'
  .col-sm-6
    = form.password_field :password_confirmation
