.row
  .col-sm-8.col-sm-offset-2

    %h2 Register

    = form_for @user, :html => { class: 'form-horizontal form-border' } do |f|

      = error_messages @user

      = render :partial => 'form', :object => f

      .form-group
        .col-sm-8.col-sm-offset-4
          = f.submit "Register", class: 'btn btn-primary'
